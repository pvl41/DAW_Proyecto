<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.registro.NacimientoActivity">

    <!-- Flecha de atras -->
    <ImageView
        android:id="@+id/Flecha"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/iconoflechaback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#F69824" />

    <!--  Barra de progreso  -->
    <ProgressBar
        android:id="@+id/BProgreso"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:indeterminate="false"
        android:progress="30"
        android:max="100"
        android:progressDrawable="@drawable/barra_progreso"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_constraintTop_toBottomOf="@+id/Flecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!-- Titulo principal de Nacimiento -->
    <TextView
        android:id="@+id/TvH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuando nació tu perrito?"
        android:textColor="#232323"
        android:textAlignment="center"
        android:textSize="22sp"
        android:fontFamily="@font/kanit_bold"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/BProgreso"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- contenedor para el input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Til1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="#FFFFFF"
        app:boxStrokeColor="#232323"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/TvH1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- input nacimiento -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/NomPerro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/kanit_medium" />
    </com.google.android.material.textfield.TextInputLayout>




    <!--label fecha -->
    <TextView
        android:id="@+id/TvLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:text="El perifl mostrará la edad del perrito, no su fecha de nacimiento."
        android:textAlignment="center"
        android:textColor="#232323"
        android:textSize="10sp"
        android:fontFamily="@font/kanit_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Til1" />

    <!--  Boton siguiente  -->
    <Button
        android:id="@+id/BSiguiente"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="433dp"
        style="@style/ButtonGradient"
        android:textColor="#ffffff"
        android:text="SIGUIENTE"
        android:textSize="20sp"
        android:fontFamily="@font/kanit_bold"
        app:layout_constraintTop_toBottomOf="@+id/TvLabel1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>