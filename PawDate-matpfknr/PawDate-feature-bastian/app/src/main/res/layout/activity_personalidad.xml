<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.registro.PersonalidadActivity">

    <!-- Flecha de atras -->
    <ImageView
        android:id="@+id/Flecha"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/iconoflechaback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#F69824" />

    <!--  Barra de progreso  -->
    <ProgressBar
        android:id="@+id/BProgreso"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:progress="85"
        android:max="100"
        android:layout_marginTop="10dp"
        android:progressDrawable="@drawable/barra_progreso"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_constraintTop_toBottomOf="@+id/Flecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!-- Título -->
    <TextView
        android:id="@+id/TvH1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hablemos de la personalidad de tu perrito"
        android:fontFamily="@font/kanit_bold"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:textColor="#232323"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/BProgreso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/TvLabel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalla cómo se comporta, actúa y reacciona tu perrito en su día a día."
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:textColor="#232323"
        android:fontFamily="@font/kanit_medium"
        app:layout_constraintTop_toBottomOf="@+id/TvH1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Comportamiento y temperamento (chips en varias filas horizontales) -->
    <TextView
        android:id="@id/TvLabel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comportamiento y temperamento:"
        android:fontFamily="@font/kanit_semibold"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:textColor="#232323"
        app:layout_constraintTop_toBottomOf="@+id/TvLabel1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Fila 1 -->
    <LinearLayout
        android:id="@+id/LLyt1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@+id/TvLabel2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/CManso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manso"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:textColor="#232323"
            android:layout_marginRight="8dp"
            android:background="@drawable/chip_bg_gray" />

        <TextView
            android:id="@+id/CCarinhoso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cariñoso"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:textColor="#232323"
            android:layout_marginRight="8dp"
            android:background="@drawable/chip_bg_gray" />

        <TextView
            android:id="@+id/CAfectuoso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afectuoso"
            android:fontFamily="@font/kanit_medium"
            android:textColor="#232323"
            android:padding="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/chip_bg_gray" />
        <TextView
            android:id="@+id/CIndepen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Independiente"
            android:fontFamily="@font/kanit_medium"
            android:textColor="#232323"
            android:padding="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/chip_bg_gray" />
    </LinearLayout>

    <!-- Fila 2 -->
    <LinearLayout
        android:id="@+id/LLyt2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@+id/LLyt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/CSolitario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solitario"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginRight="8dp"
            android:textColor="#232323"
            android:background="@drawable/chip_bg_gray" />

        <TextView
            android:id="@+id/CProtector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protector"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginRight="8dp"
            android:textColor="#232323"
            android:background="@drawable/chip_bg_gray" />

        <TextView
            android:id="@+id/CTimido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tímido"
            android:padding="8dp"
            android:textColor="#232323"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginRight="8dp"
            android:background="@drawable/chip_bg_gray" />

        <TextView
            android:id="@+id/CTerritorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Territorial"
            android:textColor="#232323"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginRight="8dp"
            android:background="@drawable/chip_bg_gray" />
    </LinearLayout>

    <!-- Relación con el entorno -->
    <TextView
        android:id="@+id/TvLabel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Relación con el entorno:"
        android:fontFamily="@font/kanit_semibold"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:textSize="14sp"
        android:textColor="#232323"
        app:layout_constraintTop_toBottomOf="@+id/LLyt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/LLyt3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@+id/TvLabel3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/CCurioso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curioso"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:textColor="#232323"
            android:layout_marginRight="8dp"
            android:background="@drawable/chip_bg_gray" />

        <TextView
            android:id="@+id/CExplorador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explorador"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:textColor="#232323"
            android:layout_marginRight="8dp"
            android:background="@drawable/chip_bg_gray" />

        <TextView
            android:id="@+id/CTranquilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tranquilo"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:textColor="#232323"
            android:layout_marginRight="8dp"
            android:background="@drawable/chip_bg_gray" />

        <TextView
            android:id="@+id/CDestructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destructor"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:textColor="#232323"
            android:layout_marginRight="8dp"
            android:background="@drawable/chip_bg_gray" />
    </LinearLayout>

    <!-- Fila 2 -->
    <LinearLayout
        android:id="@+id/LLyt4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@+id/LLyt3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/CObediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Obediente"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginRight="8dp"
            android:textColor="#232323"
            android:background="@drawable/chip_bg_gray" />

        <TextView
            android:id="@+id/CLadrador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ladrador"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginRight="8dp"
            android:textColor="#232323"
            android:background="@drawable/chip_bg_gray" />

        <TextView
            android:id="@+id/CTravieso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travieso"
            android:padding="8dp"
            android:textColor="#232323"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginRight="8dp"
            android:background="@drawable/chip_bg_gray" />

        <TextView
            android:id="@+id/CTestarudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testarudo"
            android:textColor="#232323"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginRight="8dp"
            android:background="@drawable/chip_bg_gray" />
    </LinearLayout>

    <!-- Interacción social -->
    <TextView
        android:id="@+id/TvLabel4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Interacción Social:"
        android:fontFamily="@font/kanit_semibold"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:textSize="14sp"
        android:textColor="#232323"
        app:layout_constraintTop_toBottomOf="@+id/LLyt4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/LLyt5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/TvLabel4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/ChipBP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Se lleva bien con otros perros"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginRight="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textColor="#232323"
            android:background="@drawable/chip_bg_gray" />

        <TextView
            android:id="@+id/CBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bueno con los niños"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginRight="8dp"
            android:textColor="#232323"
            android:background="@drawable/chip_bg_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLyt6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/LLyt5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/ChipCeloso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Celoso"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginRight="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textColor="#232323"
            android:background="@drawable/chip_bg_gray" />

        <TextView
            android:id="@+id/CPG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prefiere la gente"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginRight="8dp"
            android:background="@drawable/chip_bg_gray"
            android:textColor="#232323" />

        <TextView
            android:id="@+id/CCE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cauteloso con extraños"
            android:padding="8dp"
            android:fontFamily="@font/kanit_medium"
            android:layout_marginRight="8dp"
            android:background="@drawable/chip_bg_gray"
            android:textColor="#232323" />
    </LinearLayout>

    <!--  Boton siguiente  -->
    <Button
        android:id="@+id/BSiguiente"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        style="@style/ButtonGradient"
        android:textColor="#ffffff"
        android:text="SIGUIENTE"
        android:textSize="20sp"
        android:fontFamily="@font/kanit_bold"
        app:layout_constraintTop_toBottomOf="@+id/LLyt6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>