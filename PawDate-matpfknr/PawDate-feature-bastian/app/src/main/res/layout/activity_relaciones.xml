<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.registro.RelacionesActivity">

    <!-- Flecha de atras -->
    <ImageView
        android:id="@+id/Flecha"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/iconoflechaback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#F69824" />

    <!--  Barra de progreso  -->
    <ProgressBar
        android:id="@+id/BProgreso"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:progress="60"
        android:max="100"
        android:layout_marginTop="10dp"
        android:progressDrawable="@drawable/barra_progreso"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_constraintTop_toBottomOf="@+id/Flecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!-- Titulo principal de relaciones -->
    <TextView
        android:id="@+id/TvH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Qué estás buscando para tu perrito?"
        android:textColor="#232323"
        android:textAlignment="center"
        android:textSize="22sp"
        android:fontFamily="@font/kanit_bold"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/BProgreso"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Titulo principal de relaciones -->
    <TextView
        android:id="@+id/TvLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todo bien si cambia. Siempre hay algo para todos los perritos."
        android:textColor="#232323"
        android:textAlignment="center"
        android:textSize="10sp"
        android:fontFamily="@font/kanit_semibold"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/TvH1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- para alinear las imagenes -->
    <LinearLayout
        android:id="@+id/LLyt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/TvLabel1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!--    Imagen relacion uno    -->
        <ImageView
            android:id="@+id/IvUno"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/amistadpeluda_icon"
            app:tint="#232323"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintTop_toBottomOf="@+id/TvLabel1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <!--    Imagen relacion dos    -->
        <ImageView
            android:id="@+id/IvDos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/amorperruno_icon"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/TvLabel1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </LinearLayout>

<!-- para alinear los dos botones -->
    <LinearLayout
        android:id="@+id/LLyt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/LLyt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

<!--    Boton relacion uno    -->
        <Button
            android:id="@+id/BUno"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F69824"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:text="Amistad peluda"
            android:textColor="#232323"
            android:fontFamily="@font/kanit_medium"
            app:layout_constraintTop_toBottomOf="@+id/LLyt1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

<!--    Boton relacion dos    -->
        <Button
            android:id="@+id/BDos"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F69824"
            android:layout_marginTop="10dp"
            android:text="Amor perruno"
            android:textColor="#232323"
            android:fontFamily="@font/kanit_medium"
            app:layout_constraintTop_toBottomOf="@+id/LLyt1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>

    <!-- para alinear las dos imagenes -->
    <LinearLayout
        android:id="@+id/LLyt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/LLyt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!--    Imagen relacion uno    -->
        <ImageView
            android:id="@+id/IvTres"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/companherodejuegos_icon"
            app:tint="#232323"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintTop_toBottomOf="@+id/LLyt2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <!--    Imagen relacion dos    -->
        <ImageView
            android:id="@+id/IvCuatro"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pasearjuntos_icon"
            app:tint="#232323"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/LLyt2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </LinearLayout>

    <!-- para alinear los dos botones -->
    <LinearLayout
        android:id="@+id/LLyt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/LLyt3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!--    Boton relacion uno    -->
        <Button
            android:id="@+id/BTres"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F69824"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:text="Compañero de juegos"
            android:textColor="#232323"
            android:fontFamily="@font/kanit_medium"
            app:layout_constraintTop_toBottomOf="@+id/LLyt3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!--    Boton relacion dos    -->
        <Button
            android:id="@+id/BCuatro"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F69824"
            android:layout_marginTop="10dp"
            android:text="Pasear juntos"
            android:textColor="#232323"
            android:fontFamily="@font/kanit_medium"
            app:layout_constraintTop_toBottomOf="@+id/LLyt3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>

    <!-- para alinear las imagenes -->
    <LinearLayout
        android:id="@+id/LLyt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/LLyt4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!--    Imagen relacion uno    -->
        <ImageView
            android:id="@+id/IvCinco"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/criarcachorros_icon"
            app:tint="#232323"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintTop_toBottomOf="@+id/LLyt5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <!--    Imagen relacion dos    -->
        <ImageView
            android:id="@+id/IvSeis"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rivalamistoso_icon"
            app:tint="#232323"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/LLyt5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </LinearLayout>

    <!-- para alinear los dos botones -->
    <LinearLayout
        android:id="@+id/LLyt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.736"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LLyt5">

        <!--    Boton relacion uno    -->
        <Button
            android:id="@+id/BCinco"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="#F69824"
            android:fontFamily="@font/kanit_medium"
            android:text="Criar cachorros juntos"
            android:textColor="#232323"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LLyt5" />

        <!--    Boton relacion dos    -->
        <Button
            android:id="@+id/BSeis"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F69824"
            android:fontFamily="@font/kanit_medium"
            android:text="Rival amistoso"
            android:textColor="#232323"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LLyt1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>