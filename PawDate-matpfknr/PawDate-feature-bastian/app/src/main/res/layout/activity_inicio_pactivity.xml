<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".view.menu.InicioPActivity">

    <!-- Barra superior -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iconMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Menu"
            android:src="@drawable/ic_sandwich"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iconMenu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iconRight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_checked"
            android:contentDescription="Profile"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Contenedor de la imagen -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        app:layout_constraintVertical_bias="0.9"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/ivDogImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Puppy winking"
            android:scaleType="centerCrop"
            android:src="@drawable/boton_degradado" />
    </androidx.cardview.widget.CardView>

    <!-- Botones flotantes -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnReject"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/circle_red"
            android:src="@drawable/ic_close"
            android:padding="20dp"
            android:elevation="8dp"
            android:contentDescription="Reject"/>

        <ImageButton
            android:id="@+id/btnAccept"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/circle_green"
            android:src="@drawable/ic_checked"
            android:padding="20dp"
            android:elevation="8dp"
            android:contentDescription="Accept"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
