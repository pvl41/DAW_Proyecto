<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.registro.RegistroActivity">

    <!-- Flecha de atras -->
    <ImageView
        android:id="@+id/Flecha"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/iconoflechaback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#F69824"/>
<!-- LOGOOOOOOOOO -->
    <ImageView
        android:id="@+id/Logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/pawdate"
        app:layout_constraintTop_toBottomOf="@+id/Flecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

<!-- Titulo principal de registro -->
    <TextView
        android:id="@+id/TvH1"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="35sp"
        android:fontFamily="@font/kanit_bold"
        android:textColor="#F69824"
        android:text="Registrate en PawDate"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

<!--  Texto para el número  -->
    <LinearLayout
        android:id="@+id/LLyt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/TvH1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/TvNumero"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="¿Número Telefonico?"
            android:textAlignment="textStart"
            android:textColor="#232323"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/kanit_semibold"/>
    </LinearLayout>

<!-- Para manejar el textview y el input en una sola linea -->
    <LinearLayout
        android:id="@+id/LLyt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/LLyt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

<!--    Texto a la izquierda    -->
        <TextView
            android:id="@+id/TvPrefijo"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginEnd="50dp"
            android:text="PE +51"
            android:textAlignment="textStart"
            android:textColor="#232323"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/kanit_medium"/>

        <!--  Input para el número telefonico  -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Til1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="#232323"
            app:boxStrokeWidth="2dp"
            app:boxBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/LLyt1"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="999 999 999"
                android:inputType="phone"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:fontFamily="@font/kanit_medium" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


    <!--  Texto para el correo  -->
    <LinearLayout
        android:id="@+id/LLyt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/LLyt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/TvEmail"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="¿Email?"
            android:textAlignment="textStart"
            android:textColor="#232323"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/kanit_semibold"/>
    </LinearLayout>

    <!--  Input para el email  -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Til2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="filled"
        app:boxStrokeColor="#232323"
        app:boxStrokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@+id/LLyt3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- el input para el email -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="correo@dominio.com"
            android:inputType="textEmailAddress"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:fontFamily="@font/kanit_medium"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--  Boton siguiente  -->
    <Button
        android:id="@+id/BSiguiente"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        style="@style/ButtonGradient"
        android:textColor="#ffffff"
        android:text="SIGUIENTE"
        android:textSize="20sp"
        android:fontFamily="@font/kanit_bold"
        app:layout_constraintTop_toBottomOf="@+id/Til2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>